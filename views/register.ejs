<%- include('templates/header'); %>

<h2>Register</h2>

<form action="/register" method="post" class="form">
  <%- include('templates/messages'); %>
  <input type="text" class="input" name="name" value="<%= typeof name != 'undefined' ? name : '' %>" placeholder="Name"
    required />
  <input type="email" class="input" name="email" value="<%= typeof email != 'undefined' ? email : '' %>"
    placeholder="Email" required />
  <input type="password" class="input" name="password" placeholder="Password" required />
  <input type="password" class="input" name="password2" placeholder="Confirm Password" required />
  <input type="submit" class="btn" alue="Register" />
  <p>Already registered ? &nbsp;&nbsp; <a href="/login">Login</a></p>
</form>

<%- include('templates/footer'); %>